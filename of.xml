<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html>
<html b:version='2'
      xmlns='http://www.w3.org/1999/xhtml'
      xmlns:b='http://www.google.com/2005/gml/b'
      xmlns:data='http://www.google.com/2005/gml/data'
      xmlns:expr='http://www.google.com/2005/gml/expr'>

<head>
  <b:include data='blog' name='all-head-content'/>
  <title><data:blog.pageTitle/></title>

  <meta charset='utf-8'/>
  <meta name='viewport' content='width=device-width, initial-scale=1'/>

  <!-- REQUIRED BY BLOGGER -->
  <b:skin><![CDATA[
    body {
      background:#000;
      color:#fff;
      margin:0;
      font-family:Arial, Helvetica, sans-serif;
    }
  ]]></b:skin>

  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    header {
      text-align: center;
      padding: 14px 0;
      border-bottom: 1px solid #111;
    }

    header a {
      color: #fff;
      text-decoration: none;
      font-size: 16px;
      font-weight: bold;
    }

    .video-container {
      display: flex;
      justify-content: center;
      padding: 20px 10px;
    }

    .video-box {
      width: 100%;
      max-width: 420px; /* mobile */
      position: relative;
      background: #000;
    }

    .video-box::before {
      content: "";
      display: block;
      padding-top: 56.25%; /* 16:9 */
    }

    .video-box iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border: none;
    }

    /* TABLET */
    @media (min-width: 601px) {
      .video-box {
        max-width: 720px;
      }
    }

    /* DESKTOP */
    @media (min-width: 1025px) {
      .video-box {
        max-width: 1000px;
      }
    }

    footer {
      text-align: center;
      padding: 16px;
      font-size: 12px;
      color: #666;
      border-top: 1px solid #111;
    }

    /* HIDE ALL TEXT */
    h1, h2, h3, p, span {
      display: none !important;
    }
  </style>
</head>

<body>

<header>
  <a expr:href='data:blog.homepageUrl'>
    <data:blog.title/>
  </a>
</header>

<div class="video-container">
  <b:section id='main' showaddelement='no'>
    <b:widget id='Blog1' locked='true' type='Blog'>
      <b:includable id='main'>
        <b:loop values='data:posts' var='post'>
          <div class="video-box">
            <data:post.body/>
          </div>
        </b:loop>
      </b:includable>
    </b:widget>
  </b:section>
</div>

<footer>
  Â© <data:blog.title/>
</footer>

</body>
</html>
